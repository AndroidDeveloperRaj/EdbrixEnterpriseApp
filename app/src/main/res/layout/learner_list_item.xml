<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/app_normal_padding">

    <com.edbrix.enterprise.Utils.RoundedImageView
        android:id="@+id/learnerImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/app_min_margin"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:src="@mipmap/user_profile" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/app_normal_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/learnerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/app_min_margin"
            android:textColor="@color/colorMainText"
            android:textSize="18sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/learnerEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/app_min_margin"
            android:layout_marginRight="@dimen/app_min_margin"
            android:textColor="@color/colorSubText"
            android:textSize="15sp"
            android:typeface="monospace" />

    </LinearLayout>

    <ImageView
        android:id="@+id/checkImg"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/app_min_padding"
        android:src="@drawable/unchecked_orange"
        android:visibility="visible" />

</LinearLayout>
