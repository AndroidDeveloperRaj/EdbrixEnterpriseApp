<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/app_min_padding"
        android:paddingTop="@dimen/app_min_padding">

        <TextView
            android:id="@+id/session_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/app_min_margin"
            android:layout_marginTop="@dimen/app_min_margin"
            android:layout_weight="1"
            android:text="Mathematics"
            android:textColor="@color/actionbarText"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <ImageButton
            android:id="@+id/custom_cancle"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_margin="@dimen/app_min_margin"
            android:background="@android:color/transparent"
            android:padding="@dimen/app_min_padding"
            android:src="@mipmap/close" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/app_min_padding"
            android:paddingTop="@dimen/app_min_padding">

            <TextView
                android:id="@+id/session_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/app_normal_margin"
                android:text="06"
                android:textColor="@color/actionbarText"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/session_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_normal_margin"
                android:text="Dec, 2017"
                android:textAllCaps="true"
                android:textColor="@color/colorMainText"
                android:textSize="12sp"
                android:typeface="monospace" />

        </LinearLayout>

        <View
            android:id="@+id/training_session_view"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/app_min_margin"
            android:layout_marginLeft="@dimen/app_min_margin"
            android:layout_marginRight="@dimen/app_min_margin"
            android:layout_marginStart="@dimen/app_min_margin"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/app_min_margin"
                android:orientation="horizontal"
                android:visibility="visible">

                <com.edbrix.enterprise.Utils.RoundedImageView
                    android:id="@+id/instructor_pic"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/user_profile" />

                <TextView
                    android:id="@+id/instructor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/app_min_margin"
                    android:layout_marginStart="@dimen/app_min_margin"
                    android:text="By Meghraj"
                    android:textColor="@color/colorAppOrange"
                    android:textStyle="bold"
                    android:typeface="monospace" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_min_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/session_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/clock"
                    android:drawablePadding="@dimen/app_min_padding"
                    android:drawableStart="@mipmap/clock"
                    android:paddingBottom="@dimen/app_min_padding"
                    android:paddingTop="@dimen/app_min_padding"
                    android:text="12.00PM - 3.00PM"
                    android:textColor="@color/colorMainText"
                    android:textSize="12sp"
                    android:typeface="monospace" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/session_place"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/app_min_margin"
                        android:layout_marginTop="@dimen/app_min_margin"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/location_icon"
                        android:drawablePadding="@dimen/app_min_padding"
                        android:drawableStart="@mipmap/location_icon"
                        android:paddingBottom="@dimen/app_min_padding"
                        android:paddingTop="@dimen/app_min_padding"
                        android:text="Dallas"
                        android:textColor="@color/colorMainText"
                        android:textSize="12sp"
                        android:typeface="monospace" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>